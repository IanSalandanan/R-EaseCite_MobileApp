<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@android:color/white"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="Manage\nSections"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/textView1" />
    <TextView
        android:text="Section"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView2" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/spinner_outline"
        android:id="@+id/sectionOpt" />
    <TextView
        android:text="Manage Students"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="-10dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView3" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/spinner_outline"
        android:id="@+id/actionOpt" />
    <Button
        android:text="Proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:backgroundTint="#2c2c2c"
        android:textColor="@android:color/white"
        android:background="@drawable/edgebutton"
        android:id="@+id/proceedBtn" />
    <Button
        android:text="New Section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:backgroundTint="#2c2c2c"
        android:textColor="@android:color/white"
        android:background="@drawable/edgebutton"
        android:id="@+id/newSecBtn" />
    <Button
        android:text="Remove Section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:backgroundTint="#2c2c2c"
        android:textColor="@android:color/white"
        android:background="@drawable/edgebutton"
        android:id="@+id/removeSecBtn" />
    <Button
        android:text="Update Section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:backgroundTint="#2c2c2c"
        android:textColor="@android:color/white"
        android:background="@drawable/edgebutton"
        android:id="@+id/updateSecBtn" />
    <Button
        android:text="Return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:backgroundTint="#2c2c2c"
        android:textColor="@android:color/white"
        android:background="@drawable/edgebutton"
        android:id="@id/returnBtn" />
</LinearLayout>
